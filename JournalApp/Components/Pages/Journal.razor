    private async Task ApplyFilters()
    {
        var result = entries.AsEnumerable();

        // Apply search
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            var query = searchQuery.ToLower();
            result = result.Where(e =>
                e.Title.ToLower().Contains(query) ||
                e.Content.ToLower().Contains(query));
        }

        // Apply date filters
        if (filterStartDate.HasValue)
            result = result.Where(e => e.EntryDate.Date >= filterStartDate.Value.Date);

        if (filterEndDate.HasValue)
            result = result.Where(e => e.EntryDate.Date <= filterEndDate.Value.Date);

        // Apply mood filters
        if (filterMoodIds.Count > 0)
        {
            var tempResult = new List<JournalEntry>();
            foreach (var entry in result)
            {
                var moods = entryMoods.GetValueOrDefault(entry.Id, new List<Mood>());
                if (moods.Any(m => filterMoodIds.Contains(m.Id)))
                {
                    tempResult.Add(entry);
                }
            }
            result = tempResult;
        }

        // Apply tag filters
        if (filterTagIds.Count > 0)
        {
            var tempResult = new List<JournalEntry>();
            foreach (var entry in result)
            {
                var tags = entryTags.GetValueOrDefault(entry.Id, new List<Tag>());
                if (tags.Any(t => filterTagIds.Contains(t.Id)))
                {
                    tempResult.Add(entry);
                }
            }
            result = tempResult;
        }

        filteredEntries = result.OrderByDescending(e => e.CreatedAt).ToList();

        // Reset to first page when filters change
        currentPage = 1;
    }

    private async Task ClearAllFilters()
    {
        filterStartDate = null;
        filterEndDate = null;
        filterMoodIds.Clear();
        filterTagIds.Clear();
        searchQuery = string.Empty;
        await ApplyFilters();
    }

