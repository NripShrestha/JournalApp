@page "/journal"
@using JournalApp.Models
@using JournalApp.Services
@inject JournalApp.Data.AppDatabase Database
@inject IJSRuntime JS
@inject SecurityService Security
@inject NavigationManager Nav
@inject PdfExportService PdfExport

<div class="journal-container">
    <div class="journal-grid">

        <!-- History-->
        <aside class="history-section">
            <h2 class="section-title">Journal History</h2>

            <!-- Search Bar -->
            <div class="search-container">
                <div class="search-input-wrapper">
                    <i class="bi bi-search"></i>
                    <input type="text"
                           class="search-input"
                           value="@searchQuery"
                           @oninput="OnSearchChanged"
                           placeholder="Search by title or content..." />
                    @if (!string.IsNullOrEmpty(searchQuery))
                    {
                        <button class="search-clear" @onclick="ClearSearch">
                            <i class="bi bi-x-circle-fill"></i>
                        </button>
                    }
                </div>
            </div>

            <!-- Filter Section -->
            <div class="filter-container">
                <button class="filter-toggle" @onclick="ToggleFilterPanel">
                    <i class="bi bi-funnel"></i>
                    Filters
                    @if (hasActiveFilters)
                    {
                        <span class="filter-badge">@activeFilterCount</span>
                    }
                </button>

                @if (showFilterPanel)
                {
                    <div class="filter-panel">
                        <!-- Date Range Filter -->
                        <div class="filter-section">
                            <div class="filter-header" @onclick="() => showDateFilter = !showDateFilter">
                                <i class="bi bi-calendar-range"></i>
                                <span>Date Range</span>
                                <i class="bi @(showDateFilter ? "bi-chevron-up" : "bi-chevron-down")"></i>
                            </div>

                            @if (showDateFilter)
                            {
                                <div class="filter-content">
                                    <div class="date-inputs">
                                        <div class="date-input-group">
                                            <label>From:</label>
                                            <input type="date"
                                                   class="date-input"
                                                   @bind="filterStartDate" />
                                        </div>
                                        <div class="date-input-group">
                                            <label>To:</label>
                                            <input type="date"
                                                   class="date-input"
                                                   @bind="filterEndDate" />
                                        </div>
                                    </div>

                                    <!-- Calendar Navigation -->
                                    <div class="calendar-nav">
                                        <div class="calendar-header">
                                            <button @onclick="PreviousMonth" class="calendar-nav-btn">
                                                <i class="bi bi-chevron-left"></i>
                                            </button>
                                            <span class="calendar-month">@currentCalendarDate.ToString("MMMM yyyy")</span>
                                            <button @onclick="NextMonth" class="calendar-nav-btn">
                                                <i class="bi bi-chevron-right"></i>
                                            </button>
                                        </div>
                                        <div class="calendar-grid">
                                            <div class="calendar-day-header">Su</div>
                                            <div class="calendar-day-header">Mo</div>
                                            <div class="calendar-day-header">Tu</div>
                                            <div class="calendar-day-header">We</div>
                                            <div class="calendar-day-header">Th</div>
                                            <div class="calendar-day-header">Fr</div>
                                            <div class="calendar-day-header">Sa</div>

                                            @foreach (var day in GetCalendarDays())
                                            {
                                                <button class="calendar-day @GetDayClass(day)"
                                                        @onclick="() => SelectCalendarDate(day)"
                                                        disabled="@(!day.HasValue)">
                                                    @(day?.Day.ToString() ?? "")
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Mood Filter -->
                        <div class="filter-section">
                            <div class="filter-header" @onclick="() => showMoodFilter = !showMoodFilter">
                                <i class="bi bi-emoji-smile"></i>
                                <span>Moods</span>
                                <i class="bi @(showMoodFilter ? "bi-chevron-up" : "bi-chevron-down")"></i>
                            </div>

                            @if (showMoodFilter)
                            {
                                <div class="filter-content">
                                    @foreach (var category in new[] { "Positive", "Neutral", "Negative" })
                                    {
                                        var categoryMoods = allMoods.Where(m => m.Category == category).ToList();
                                        <div class="filter-mood-category">
                                            <div class="filter-category-label">@category</div>
                                            <div class="filter-pills">
                                                @foreach (var mood in categoryMoods)
                                                {
                                                    <button type="button"
                                                            class="filter-pill @(filterMoodIds.Contains(mood.Id) ? "active" : "") @GetMoodColorClass(mood.Category)"
                                                            @onclick="() => ToggleFilterMood(mood.Id)">
                                                        @mood.Name
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        <!-- Tag Filter -->
                        <div class="filter-section">
                            <div class="filter-header" @onclick="() => showTagFilter = !showTagFilter">
                                <i class="bi bi-tags"></i>
                                <span>Tags</span>
                                <i class="bi @(showTagFilter ? "bi-chevron-up" : "bi-chevron-down")"></i>
                            </div>

                            @if (showTagFilter)
                            {
                                <div class="filter-content">
                                    <div class="filter-pills">
                                        @foreach (var tag in allTags)
                                        {
                                            <button type="button"
                                                    class="filter-pill @(filterTagIds.Contains(tag.Id) ? "active" : "")"
                                                    @onclick="() => ToggleFilterTag(tag.Id)">
                                                @tag.Name
                                            </button>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Filter Actions -->
                        <div class="filter-actions">
                            <button class="btn-filter-apply" @onclick="ApplyFilters">
                                Apply Filters
                            </button>
                            <button class="btn-filter-clear" @onclick="ClearAllFilters">
                                Clear All
                            </button>
                        </div>
                    </div>
                }
            </div>

            <!-- Results Info -->
            @if (hasActiveFilters || !string.IsNullOrEmpty(searchQuery))
            {
                <div class="results-info">
                    Showing @filteredEntries.Count of @entries.Count entries
                </div>
            }

            <div class="history-scroll">
                @if (filteredEntries.Count == 0)
                {
                    <div class="empty-state">
                        @if (hasActiveFilters || !string.IsNullOrEmpty(searchQuery))
                        {
                            <span>No entries match your search/filter criteria.</span>
                        }
                        else
                        {
                            <span>No entries yet.</span>
                        }
                    </div>
                }
                else
                {
                    @foreach (var entry in paginatedEntries)
                    {
                        <div class="history-card"
                             @key="entry.Id"
                             @onclick="() => EditEntry(entry)"
                             style="cursor: pointer;">

                            <div class="card-pills">
                                <span class="badge-pill pill-date">
                                    @entry.CreatedAt.ToString("MMM dd")
                                </span>

                                @if (entryTags.TryGetValue(entry.Id, out var tags))
                                {
                                    foreach (var tag in tags)
                                    {
                                        <span class="badge-pill pill-tag">@tag.Name</span>
                                    }
                                }

                                @if (entryMoods.TryGetValue(entry.Id, out var moods))
                                {
                                    foreach (var mood in moods)
                                    {
                                        <span class="badge-pill pill-mood @GetMoodColorClass(mood.Category)">
                                            @mood.Name
                                        </span>
                                    }
                                }
                            </div>

                            <h4 class="card-title">@entry.Title</h4>

                            <div class="card-excerpt">
                                @((MarkupString)entry.Content)
                            </div>

                            <!-- Delete Button -->
                            <button type="button"
                                    class="card-delete"
                                    @onclick="async () => await ConfirmDelete(entry)"
                                    @onclick:stopPropagation>
                                <i class="bi bi-trash"></i>
                            </button>

                        </div>
                    }
                }
            </div>

            <!-- Pagination Controls -->
            @if (filteredEntries.Count > 0)
            {
                <div class="pagination-container">
                    <div class="pagination-info">
                        Showing @((currentPage - 1) * itemsPerPage + 1)-@(Math.Min(currentPage * itemsPerPage, filteredEntries.Count)) of @filteredEntries.Count
                    </div>

                    <div class="pagination-controls">
                        <button class="pagination-btn"
                                @onclick="PreviousPage"
                                disabled="@(currentPage == 1)">
                            <i class="bi bi-chevron-left"></i>
                        </button>

                        @foreach (var pageNum in GetPageNumbers())
                        {
                            if (pageNum == -1)
                            {
                                <span class="pagination-ellipsis">...</span>
                            }
                            else
                            {
                                var pageNumber = pageNum;
                                <button class="pagination-btn @(currentPage == pageNumber ? "active" : "")"
                                        @onclick="@(() => GoToPage(pageNumber))">
                                    @pageNumber
                                </button>
                            }
                        }

                        <button class="pagination-btn"
                                @onclick="NextPage"
                                disabled="@(currentPage == totalPages)">
                            <i class="bi bi-chevron-right"></i>
                        </button>
                    </div>
                </div>

                <!-- Export Section -->
                <div class="export-container">
                    <button class="export-toggle" @onclick="ToggleExportPanel">
                        <i class="bi bi-file-earmark-pdf"></i>
                        Export to PDF
                    </button>

                    @if (showExportPanel)
                    {
                        <div class="export-panel">
                            <h3 class="export-title">Select Date Range</h3>

                            <!-- Export Calendar -->
                            <div class="calendar-nav">
                                <div class="calendar-header">
                                    <button @onclick="PreviousExportMonth" class="calendar-nav-btn">
                                        <i class="bi bi-chevron-left"></i>
                                    </button>
                                    <span class="calendar-month">@currentExportCalendarDate.ToString("MMMM yyyy")</span>
                                    <button @onclick="NextExportMonth" class="calendar-nav-btn">
                                        <i class="bi bi-chevron-right"></i>
                                    </button>
                                </div>
                                <div class="calendar-grid">
                                    <div class="calendar-day-header">Su</div>
                                    <div class="calendar-day-header">Mo</div>
                                    <div class="calendar-day-header">Tu</div>
                                    <div class="calendar-day-header">We</div>
                                    <div class="calendar-day-header">Th</div>
                                    <div class="calendar-day-header">Fr</div>
                                    <div class="calendar-day-header">Sa</div>

                                    @foreach (var day in GetExportCalendarDays())
                                    {
                                        <button class="calendar-day @GetExportDayClass(day)"
                                                @onclick="() => SelectExportDate(day)"
                                                disabled="@(!day.HasValue)">
                                            @(day?.Day.ToString() ?? "")
                                        </button>
                                    }
                                </div>
                            </div>

                            @if (exportStartDate.HasValue || exportEndDate.HasValue)
                            {
                                <div class="export-date-display">
                                    @if (exportStartDate.HasValue)
                                    {
                                        <span>From: @exportStartDate.Value.ToString("MMM dd, yyyy")</span>
                                    }
                                    @if (exportEndDate.HasValue)
                                    {
                                        <span>To: @exportEndDate.Value.ToString("MMM dd, yyyy")</span>
                                    }
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(exportMessage))
                            {
                                <div class="export-message @(exportMessage.Contains("success") ? "success" : "error")">
                                    @exportMessage
                                </div>
                            }

                            <div class="export-actions">
                                <button class="btn-export"
                                        @onclick="ExportToPdf"
                                        disabled="@(isExporting || !exportStartDate.HasValue || !exportEndDate.HasValue)">
                                    @if (isExporting)
                                    {
                                        <span>Exporting...</span>
                                    }
                                    else
                                    {
                                        <span><i class="bi bi-download"></i> Export PDF</span>
                                    }
                                </button>
                                <button class="btn-export-cancel" @onclick="ToggleExportPanel">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
        </aside>

        <!--Editor -->
        <main class="editor-section">
            <div class="editor-card">

                <div class="input-row">
                    <label class="editor-label">Title:</label>
                    <input type="text"
                           class="title-input"
                           @bind="entryTitle"
                           placeholder="Enter journal title..." />
                </div>

                <!-- Primary Mood - Organized by Category -->
                <div class="selection-row">
                    <div class="selection-label">
                        <i class="bi bi-emoji-smile"></i>
                        <span>Primary Mood: <span class="required-mark">*</span></span>
                    </div>

                    @foreach (var category in new[] { "Positive", "Neutral", "Negative" })
                    {
                        var categoryMoods = allMoods.Where(m => m.Category == category).ToList();

                        <div class="mood-category-group">
                            <div class="category-header">
                                <span class="category-icon @GetCategoryIconClass(category)"></span>
                                <span class="category-name">@category</span>
                            </div>
                            <div class="pill-cloud">
                                @foreach (var mood in categoryMoods)
                                {
                                    <button type="button"
                                            class="selection-pill @(selectedPrimaryMoodId == mood.Id ? "active" : "") @GetMoodColorClass(mood.Category)"
                                            @onclick="() => selectedPrimaryMoodId = mood.Id">
                                        <span class="dot"></span> @mood.Name
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Secondary Mood - Organized by Category -->
                <div class="selection-row">
                    <div class="selection-label">
                        <i class="bi bi-emoji-expressionless"></i>
                        <span>Secondary Moods (Optional - Max 2):</span>
                    </div>

                    @foreach (var category in new[] { "Positive", "Neutral", "Negative" })
                    {
                        var categoryMoods = allMoods.Where(m => m.Category == category).ToList();

                        <div class="mood-category-group">
                            <div class="category-header">
                                <span class="category-icon @GetCategoryIconClass(category)"></span>
                                <span class="category-name">@category</span>
                            </div>
                            <div class="pill-cloud">
                                @foreach (var mood in categoryMoods)
                                {
                                    var isDisabled = !selectedSecondaryMoodIds.Contains(mood.Id)
                                    && selectedSecondaryMoodIds.Count >= 2;

                                    <button type="button"
                                            class="selection-pill @(selectedSecondaryMoodIds.Contains(mood.Id) ? "active" : "") @(isDisabled ? "disabled" : "") @GetMoodColorClass(mood.Category)"
                                            disabled="@isDisabled"
                                            @onclick="() => ToggleSecondaryMood(mood.Id, !selectedSecondaryMoodIds.Contains(mood.Id))">
                                        <span class="dot"></span> @mood.Name
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- TAGS -->
                <div class="selection-row">
                    <div class="selection-label">
                        <i class="bi bi-tags"></i> <span>Tags:</span>
                    </div>
                    <div class="pill-cloud">
                        @foreach (var tag in allTags)
                        {
                            <button type="button"
                                    class="selection-pill @(selectedTagIds.Contains(tag.Id) ? "active" : "")"
                                    @onclick="() => ToggleTag(tag.Id, !selectedTagIds.Contains(tag.Id))">
                                <span class="dot"></span> @tag.Name
                            </button>
                        }
                    </div>
                </div>

                <!-- CONTENT -->
                <div class="textarea-container">
                    <div id="editor" class="quill-editor"></div>
                </div>

                <!-- VALIDATION MESSAGE -->
                @if (!string.IsNullOrEmpty(validationMessage))
                {
                    <div class="validation-error">
                        <i class="bi bi-exclamation-circle"></i> @validationMessage
                    </div>
                }

                <!-- ACTION BUTTONS -->
                <div class="action-footer">
                    <button type="button"
                            class="btn-entry"
                            @onclick="SaveTodayEntry">
                        @(editingEntry != null ? "Update Entry" : "Create Entry")
                    </button>

                    @if (editingEntry != null)
                    {
                        <button type="button"
                                class="btn-entry btn-cancel"
                                @onclick="ClearForm">
                            Cancel
                        </button>
                    }
                </div>

            </div>
        </main>

    </div>
</div>

<!-- Delete Confirmation Modal -->
@if (showDeleteConfirmation && entryToDelete != null)
{
    <div class="modal-overlay" @onclick="CancelDelete">
        <div class="modal-content" @onclick:stopPropagation>
            <div class="modal-header">
                <i class="bi bi-exclamation-triangle" style="color: #dc3545; font-size: 2rem;"></i>
                <h3>Confirm Delete</h3>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this journal entry?</p>
                <p><strong>@entryToDelete.Title</strong></p>
                <p style="color: #666; font-size: 0.9rem;">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button class="btn-modal-cancel" @onclick="CancelDelete">
                    Cancel
                </button>
                <button class="btn-modal-delete" @onclick="async () => await DeleteEntry(entryToDelete)">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </div>
        </div>
    </div>
}

@code {
    private bool showDeleteConfirmation = false;
    private JournalEntry? entryToDelete = null;
    private bool showExportPanel = false;
    private DateTime? exportStartDate = null;
    private DateTime? exportEndDate = null;
    private DateTime currentExportCalendarDate = DateTime.Today;
    private bool isExporting = false;
    private string exportMessage = string.Empty;
    private string entryTitle = string.Empty;
    private string entryContent = string.Empty;
    private string validationMessage = string.Empty;

    // Track which entry we're editing
    private JournalEntry? editingEntry = null;

    private List<JournalEntry> entries = new();
    private List<JournalEntry> filteredEntries = new();
    private List<Tag> allTags = new();
    private List<Mood> allMoods = new();

    private int selectedPrimaryMoodId;
    private List<int> selectedSecondaryMoodIds = new();
    private List<int> selectedTagIds = new();

    private Dictionary<int, List<Tag>> entryTags = new();
    private Dictionary<int, List<Mood>> entryMoods = new();

    // Search & Filter variables
    private string searchQuery = string.Empty;
    private bool showFilterPanel = false;
    private bool showDateFilter = true;
    private bool showMoodFilter = false;
    private bool showTagFilter = false;

    private DateTime? filterStartDate = null;
    private DateTime? filterEndDate = null;
    private List<int> filterMoodIds = new();
    private List<int> filterTagIds = new();

    // Calendar navigation
    private DateTime currentCalendarDate = DateTime.Today;
    private HashSet<DateTime> entryDates = new();

    // Pagination variables
    private int currentPage = 1;
    private int itemsPerPage = 3;
    private int totalPages => filteredEntries.Count == 0 ? 1 : (int)Math.Ceiling((double)filteredEntries.Count / itemsPerPage);
    private List<JournalEntry> paginatedEntries => filteredEntries
        .Skip((currentPage - 1) * itemsPerPage)
        .Take(itemsPerPage)
        .ToList();

    private bool hasActiveFilters => filterStartDate.HasValue || filterEndDate.HasValue || filterMoodIds.Count > 0 || filterTagIds.Count > 0;
    private int activeFilterCount => (filterStartDate.HasValue ? 1 : 0) + (filterEndDate.HasValue ? 1 : 0) + (filterMoodIds.Count > 0 ? 1 : 0) + (filterTagIds.Count > 0 ? 1 : 0);

    // Export methods
    private void ToggleExportPanel()
    {
        showExportPanel = !showExportPanel;
        exportMessage = string.Empty;
    }

    private void PreviousExportMonth()
    {
        currentExportCalendarDate = currentExportCalendarDate.AddMonths(-1);
    }

    private void NextExportMonth()
    {
        currentExportCalendarDate = currentExportCalendarDate.AddMonths(1);
    }

    private List<DateTime?> GetExportCalendarDays()
    {
        var days = new List<DateTime?>();
        var firstDayOfMonth = new DateTime(currentExportCalendarDate.Year, currentExportCalendarDate.Month, 1);
        var lastDayOfMonth = firstDayOfMonth.AddMonths(1).AddDays(-1);

        var startDayOfWeek = (int)firstDayOfMonth.DayOfWeek;
        for (int i = 0; i < startDayOfWeek; i++)
        {
            days.Add(null);
        }

        for (int day = 1; day <= lastDayOfMonth.Day; day++)
        {
            days.Add(new DateTime(currentExportCalendarDate.Year, currentExportCalendarDate.Month, day));
        }

        return days;
    }

    private string GetExportDayClass(DateTime? day)
    {
        if (!day.HasValue) return "";

        var classes = new List<string>();

        if (entryDates.Contains(day.Value.Date))
            classes.Add("has-entry");

        if (exportStartDate.HasValue && day.Value.Date == exportStartDate.Value.Date)
            classes.Add("selected");

        if (exportEndDate.HasValue && day.Value.Date == exportEndDate.Value.Date)
            classes.Add("selected");

        if (exportStartDate.HasValue && exportEndDate.HasValue &&
            day.Value.Date > exportStartDate.Value.Date && day.Value.Date < exportEndDate.Value.Date)
            classes.Add("in-range");

        return string.Join(" ", classes);
    }

    private void SelectExportDate(DateTime? day)
    {
        if (!day.HasValue) return;

        if (exportStartDate.HasValue && exportEndDate.HasValue)
        {
            exportStartDate = day.Value;
            exportEndDate = null;
        }
        else if (exportStartDate.HasValue && !exportEndDate.HasValue)
        {
            if (day.Value < exportStartDate.Value)
            {
                exportEndDate = exportStartDate;
                exportStartDate = day.Value;
            }
            else
            {
                exportEndDate = day.Value;
            }
        }
        else
        {
            exportStartDate = day.Value;
        }

        exportMessage = string.Empty;
    }

    private async Task ExportToPdf()
    {
        if (!exportStartDate.HasValue || !exportEndDate.HasValue)
        {
            exportMessage = "Please select both start and end dates.";
            return;
        }

        isExporting = true;
        exportMessage = string.Empty;

        try
        {
            var filePath = await PdfExport.ExportEntriesToPdfAsync(
                exportStartDate.Value,
                exportEndDate.Value
            );

            // Open the PDF file
            await Launcher.OpenAsync(new OpenFileRequest
            {
                File = new ReadOnlyFile(filePath)
            });

            exportMessage = "PDF exported successfully!";

            // Clear selection after successful export
            await Task.Delay(2000);
            exportStartDate = null;
            exportEndDate = null;
            showExportPanel = false;
        }
        catch (Exception ex)
        {
            exportMessage = $"Export failed: {ex.Message}";
        }
        finally
        {
            isExporting = false;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        allTags = await Database.GetTagsAsync();
        allMoods = await Database.GetMoodsAsync();
        await LoadEntries();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("quillEditor.init", "editor");
        }
    }

    private async Task LoadEntries()
    {
        entries = await Database.GetEntriesAsync();
        filteredEntries = entries;

        entryTags.Clear();
        entryMoods.Clear();
        entryDates.Clear();

        foreach (var entry in entries)
        {
            entryTags[entry.Id] = await Database.GetTagsForEntryAsync(entry.Id);
            entryMoods[entry.Id] = await Database.GetMoodsForEntryAsync(entry.Id);
            entryDates.Add(entry.EntryDate.Date);
        }
    }

    // Pagination methods
    private void GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            currentPage = page;
        }
    }

    private void PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
        }
    }

    private void NextPage()
    {
        if (currentPage < totalPages)
        {
            currentPage++;
        }
    }

    private List<int> GetPageNumbers()
    {
        var pages = new List<int>();

        if (totalPages <= 7)
        {
            // Show all pages if 7 or fewer
            for (int i = 1; i <= totalPages; i++)
                pages.Add(i);
        }
        else
        {
            // Always show first page
            pages.Add(1);

            if (currentPage > 3)
                pages.Add(-1); // Ellipsis

            // Show pages around current page
            int start = Math.Max(2, currentPage - 1);
            int end = Math.Min(totalPages - 1, currentPage + 1);

            for (int i = start; i <= end; i++)
                pages.Add(i);

            if (currentPage < totalPages - 2)
                pages.Add(-1); // Ellipsis

            // Always show last page
            pages.Add(totalPages);
        }

        return pages;
    }

    // Search functionality
    private async Task OnSearchChanged(ChangeEventArgs e)
    {
        searchQuery = e.Value?.ToString() ?? string.Empty;
        await ApplyFilters();
    }

    private async Task ClearSearch()
    {
        searchQuery = string.Empty;
        await ApplyFilters();
    }

    // Filter panel
    private void ToggleFilterPanel()
    {
        showFilterPanel = !showFilterPanel;
    }

    private void ToggleFilterMood(int moodId)
    {
        if (filterMoodIds.Contains(moodId))
