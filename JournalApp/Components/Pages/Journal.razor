@page "/journal" 
@using JournalApp.Models
@inject JournalApp.Data.AppDatabase Database
@inject IJSRuntime JS
@inject SecurityService Security
@inject NavigationManager Nav

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JS.InvokeVoidAsync("quillEditor.init", "editor");
        }
    }
}
<div class="journal-container">
    <div class="journal-grid">

        <!-- History-->
        <aside class="history-section">
            <h2 class="section-title">Journal History</h2>

            <!-- Search Bar -->
            <div class="search-container">
                <div class="search-input-wrapper">
                    <i class="bi bi-search"></i>
                    <input type="text"
                           class="search-input"
                           value="@searchQuery"
                           @oninput="OnSearchChanged" 
                           placeholder="Search by title or content..." /><!--runs every keystroke-->
                    @if (!string.IsNullOrEmpty(searchQuery))
                    {
                        <button class="search-clear" @onclick="ClearSearch">
                            <i class="bi bi-x-circle-fill"></i>
                        </button>
                        @* to show the button if user has typed something *@
                    }
                </div>
            </div>

            <!-- Filter Section -->
            <div class="filter-container">
                <button class="filter-toggle" @onclick="ToggleFilterPanel">
                    <i class="bi bi-funnel"></i>
                    Filters
                    @if (hasActiveFilters)
                    {
                        <span class="filter-badge">@activeFilterCount</span>
                    }
                </button>

                @if (showFilterPanel)
                {
                    <div class="filter-panel">
                        <!-- Date Range Filter -->
                        <div class="filter-section">
                            <div class="filter-header" @onclick="() => showDateFilter = !showDateFilter">
                                <i class="bi bi-calendar-range"></i>
                                <span>Date Range</span>
                                <i class="bi @(showDateFilter ? "bi-chevron-up" : "bi-chevron-down")"></i>
                            </div>

                            @if (showDateFilter)
                            {
                                <div class="filter-content">
                                    <div class="date-inputs">
                                        <div class="date-input-group">
                                            <label>From:</label>
                                            <input type="date"
                                                   class="date-input"
                                                   @bind="filterStartDate" />
                                        </div>
                                        <div class="date-input-group">
                                            <label>To:</label>
                                            <input type="date"
                                                   class="date-input"
                                                   @bind="filterEndDate" />
                                        </div>
                                    </div>

                                    <!-- Calendar Navigation -->
                                    <div class="calendar-nav">
                                        <div class="calendar-header">
                                            <button @onclick="PreviousMonth" class="calendar-nav-btn">
                                                <i class="bi bi-chevron-left"></i>
                                            </button>
                                            <span class="calendar-month">@currentCalendarDate.ToString("MMMM yyyy")</span>
                                            <button @onclick="NextMonth" class="calendar-nav-btn">
                                                <i class="bi bi-chevron-right"></i>
                                            </button>
                                        </div>
                                        <div class="calendar-grid">
                                            <div class="calendar-day-header">Su</div>
                                            <div class="calendar-day-header">Mo</div>
                                            <div class="calendar-day-header">Tu</div>
                                            <div class="calendar-day-header">We</div>
                                            <div class="calendar-day-header">Th</div>
                                            <div class="calendar-day-header">Fr</div>
                                            <div class="calendar-day-header">Sa</div>

                                            @foreach (var day in GetCalendarDays())
                                            {
                                                <button class="calendar-day @GetDayClass(day)"
                                                        @onclick="() => SelectCalendarDate(day)"
                                                        disabled="@(!day.HasValue)">
                                                    @(day?.Day.ToString() ?? "")
                                                </button>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Mood Filter -->
                        <div class="filter-section">
                            <div class="filter-header" @onclick="() => showMoodFilter = !showMoodFilter">
                                <i class="bi bi-emoji-smile"></i>
                                <span>Moods</span>
                                <i class="bi @(showMoodFilter ? "bi-chevron-up" : "bi-chevron-down")"></i>
                            </div>

                            @if (showMoodFilter)
                            {
                                <div class="filter-content">
                                    @foreach (var category in new[] { "Positive", "Neutral", "Negative" })
                                    {
                                        var categoryMoods = allMoods.Where(m => m.Category == category).ToList();
                                        <div class="filter-mood-category">
                                            <div class="filter-category-label">@category</div>
                                            <div class="filter-pills">
                                                @foreach (var mood in categoryMoods)
                                                {
                                                    <button type="button"
                                                            class="filter-pill @(filterMoodIds.Contains(mood.Id) ? "active" : "") @GetMoodColorClass(mood.Category)"
                                                            @onclick="() => ToggleFilterMood(mood.Id)">
                                                        @mood.Name
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        <!-- Tag Filter -->
                        <div class="filter-section">
                            <div class="filter-header" @onclick="() => showTagFilter = !showTagFilter">
                                <i class="bi bi-tags"></i>
                                <span>Tags</span>
                                <i class="bi @(showTagFilter ? "bi-chevron-up" : "bi-chevron-down")"></i>
                            </div>

                            @if (showTagFilter)
                            {
                                <div class="filter-content">
                                    <div class="filter-pills">
                                        @foreach (var tag in allTags)
                                        {
                                            <button type="button"
                                                    class="filter-pill @(filterTagIds.Contains(tag.Id) ? "active" : "")"
                                                    @onclick="() => ToggleFilterTag(tag.Id)">
                                                @tag.Name
                                            </button>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Filter Actions -->
                        <div class="filter-actions">
                            <button class="btn-filter-apply" @onclick="ApplyFilters">
                                Apply Filters
                            </button>
                            <button class="btn-filter-clear" @onclick="ClearAllFilters">
                                Clear All
                            </button>
                        </div>
                    </div>
                }
            </div>

            <!-- Results Info -->
            @if (hasActiveFilters || !string.IsNullOrEmpty(searchQuery))
            {
                <div class="results-info">
                    Showing @filteredEntries.Count of @entries.Count entries
                </div>
            }

            <div class="history-scroll">
                @if (filteredEntries.Count == 0)
                {
                    <div class="empty-state">
                        @if (hasActiveFilters || !string.IsNullOrEmpty(searchQuery))
                        {
                            <span>No entries match your search/filter criteria.</span>
                        }
                        else
                        {
                            <span>No entries yet.</span>
                        }
                    </div>
                }
                else
                {
                    @foreach (var entry in filteredEntries)
                    {
                        <div class="history-card"
                             @key="entry.Id"
                             @onclick="() => EditEntry(entry)"
                             style="cursor: pointer;">

                            <div class="card-pills">
                                <span class="badge-pill pill-date">
                                    @entry.CreatedAt.ToString("MMM dd")
                                </span>

                                @if (entryTags.TryGetValue(entry.Id, out var tags))
                                {
                                    foreach (var tag in tags)
                                    {
                                        <span class="badge-pill pill-tag">@tag.Name</span>
                                    }
                                }

                                @if (entryMoods.TryGetValue(entry.Id, out var moods))
                                {
                                    foreach (var mood in moods)
                                    {
                                        <span class="badge-pill pill-mood @GetMoodColorClass(mood.Category)">
                                            @mood.Name
                                        </span>
                                    }
                                }
                            </div>

                            <h4 class="card-title">@entry.Title</h4>

                            <div class="card-excerpt">
                                @((MarkupString)entry.Content)
                            </div>

                            <!-- Delete Button -->
                            <button type="button"
                                    class="card-delete"
                                    @onclick="async () => await DeleteEntry(entry)"
                                    @onclick:stopPropagation>
                                <i class="bi bi-trash"></i>
                            </button>

                        </div>
                    }
                }
            </div>
        </aside>

        <!--Editor -->
        <main class="editor-section">
            <div class="editor-card">

                <div class="input-row">
                    <label class="editor-label">Title:</label>
                    <input type="text"
                           class="title-input"
                           @bind="entryTitle"
                           placeholder="Enter journal title..." />
                </div>

                <!-- Primary Mood - Organized by Category -->
                <div class="selection-row">
                    <div class="selection-label">
                        <i class="bi bi-emoji-smile"></i>
                        <span>Primary Mood: <span class="required-mark">*</span></span>
                    </div>

                    @foreach (var category in new[] { "Positive", "Neutral", "Negative" })
                    {
                        var categoryMoods = allMoods.Where(m => m.Category == category).ToList();

                        <div class="mood-category-group">
                            <div class="category-header">
                                <span class="category-icon @GetCategoryIconClass(category)"></span>
                                <span class="category-name">@category</span>
                            </div>
                            <div class="pill-cloud">
                                @foreach (var mood in categoryMoods)
                                {
                                    <button type="button"
                                            class="selection-pill @(selectedPrimaryMoodId == mood.Id ? "active" : "") @GetMoodColorClass(mood.Category)"
                                            @onclick="() => selectedPrimaryMoodId = mood.Id">
                                        <span class="dot"></span> @mood.Name
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Secondary Mood - Organized by Category -->
                <div class="selection-row">
                    <div class="selection-label">
                        <i class="bi bi-emoji-expressionless"></i>
                        <span>Secondary Moods (Optional - Max 2):</span>
                    </div>

                    @foreach (var category in new[] { "Positive", "Neutral", "Negative" })
                    {
                        var categoryMoods = allMoods.Where(m => m.Category == category).ToList();

                        <div class="mood-category-group">
                            <div class="category-header">
                                <span class="category-icon @GetCategoryIconClass(category)"></span>
                                <span class="category-name">@category</span>
                            </div>
                            <div class="pill-cloud">
                                @foreach (var mood in categoryMoods)
                                {
                                    var isDisabled = !selectedSecondaryMoodIds.Contains(mood.Id)
                                    && selectedSecondaryMoodIds.Count >= 2;

                                    <button type="button"
                                            class="selection-pill @(selectedSecondaryMoodIds.Contains(mood.Id) ? "active" : "") @(isDisabled ? "disabled" : "") @GetMoodColorClass(mood.Category)"
                                            disabled="@isDisabled"
                                            @onclick="() => ToggleSecondaryMood(mood.Id, !selectedSecondaryMoodIds.Contains(mood.Id))">
                                        <span class="dot"></span> @mood.Name
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- TAGS -->
                <div class="selection-row">
                    <div class="selection-label">
                        <i class="bi bi-tags"></i> <span>Tags:</span>
                    </div>
                    <div class="pill-cloud">
                        @foreach (var tag in allTags)
                        {
                            <button type="button"
                                    class="selection-pill @(selectedTagIds.Contains(tag.Id) ? "active" : "")"
                                    @onclick="() => ToggleTag(tag.Id, !selectedTagIds.Contains(tag.Id))">
                                <span class="dot"></span> @tag.Name
                            </button>
                        }
                    </div>
                </div>

                <!-- CONTENT -->
                <div class="textarea-container">
                    <div id="editor" class="quill-editor"></div>
                </div>

                <!-- VALIDATION MESSAGE -->
                @if (!string.IsNullOrEmpty(validationMessage))
                {
                    <div class="validation-error">
                        <i class="bi bi-exclamation-circle"></i> @validationMessage
                    </div>
                }

                <!-- ACTION BUTTONS -->
                <div class="action-footer">
                    <button type="button"
                            class="btn-entry"
                            @onclick="SaveTodayEntry">
                        @(editingEntry != null ? "Update Entry" : "Create Entry")
                    </button>

                    @if (editingEntry != null)
                    {
                        <button type="button"
                                class="btn-entry btn-cancel"
                                @onclick="ClearForm">
                            Cancel
                        </button>
                    }
                </div>

            </div>
        </main>

    </div>
</div>

@code {
    private string entryTitle = string.Empty;
    private string entryContent = string.Empty;
    private string validationMessage = string.Empty;

    // Track which entry we're editing
    private JournalEntry? editingEntry = null;

    private List<JournalEntry> entries = new();
    private List<JournalEntry> filteredEntries = new();
    private List<Tag> allTags = new();
    private List<Mood> allMoods = new();

    private int selectedPrimaryMoodId;
    private List<int> selectedSecondaryMoodIds = new();
    private List<int> selectedTagIds = new();

    private Dictionary<int, List<Tag>> entryTags = new();
    private Dictionary<int, List<Mood>> entryMoods = new();

    // Search & Filter variables
    private string searchQuery = string.Empty;
    private bool showFilterPanel = false;
    private bool showDateFilter = true;
    private bool showMoodFilter = false;
    private bool showTagFilter = false;

    private DateTime? filterStartDate = null;
    private DateTime? filterEndDate = null;
    private List<int> filterMoodIds = new();
    private List<int> filterTagIds = new();

    // Calendar navigation
    private DateTime currentCalendarDate = DateTime.Today;
    private HashSet<DateTime> entryDates = new();

    private bool hasActiveFilters => filterStartDate.HasValue || filterEndDate.HasValue || filterMoodIds.Count > 0 || filterTagIds.Count > 0;
    private int activeFilterCount => (filterStartDate.HasValue ? 1 : 0) + (filterEndDate.HasValue ? 1 : 0) + (filterMoodIds.Count > 0 ? 1 : 0) + (filterTagIds.Count > 0 ? 1 : 0);

    protected override async Task OnInitializedAsync()
    {
        allTags = await Database.GetTagsAsync();
        allMoods = await Database.GetMoodsAsync();
        await LoadEntries();
    }

    private async Task LoadEntries()
    {
        entries = await Database.GetEntriesAsync();
        filteredEntries = entries;

        entryTags.Clear();
        entryMoods.Clear();
        entryDates.Clear();

        foreach (var entry in entries)
        {
            entryTags[entry.Id] = await Database.GetTagsForEntryAsync(entry.Id);
            entryMoods[entry.Id] = await Database.GetMoodsForEntryAsync(entry.Id);
            entryDates.Add(entry.EntryDate.Date);
        }
    }

    // Search functionality
    private async Task OnSearchChanged(ChangeEventArgs e) //if e.Value is null then result is null
    {
        searchQuery = e.Value?.ToString() ?? string.Empty;
        await ApplyFilters();
    }

    private async Task ClearSearch()
    {
        searchQuery = string.Empty;
        await ApplyFilters();
    }

    // Filter panel
    private void ToggleFilterPanel()
    {
        showFilterPanel = !showFilterPanel;
    }

    private void ToggleFilterMood(int moodId)
    {
        if (filterMoodIds.Contains(moodId))
            filterMoodIds.Remove(moodId);
        else
            filterMoodIds.Add(moodId);
    }

    private void ToggleFilterTag(int tagId)
    {
        if (filterTagIds.Contains(tagId))
            filterTagIds.Remove(tagId);
        else
            filterTagIds.Add(tagId);
    }

    private async Task ApplyFilters()
    {
        var result = entries.AsEnumerable();

        // Apply search
        if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            var query = searchQuery.ToLower();
            result = result.Where(e =>
                e.Title.ToLower().Contains(query) ||
                e.Content.ToLower().Contains(query));
        }

        // Apply date filters
        if (filterStartDate.HasValue)
            result = result.Where(e => e.EntryDate.Date >= filterStartDate.Value.Date);

        if (filterEndDate.HasValue)
            result = result.Where(e => e.EntryDate.Date <= filterEndDate.Value.Date);

        // Apply mood filters
        if (filterMoodIds.Count > 0)
        {
            var tempResult = new List<JournalEntry>();
            foreach (var entry in result)
            {
                var moods = entryMoods.GetValueOrDefault(entry.Id, new List<Mood>());
                if (moods.Any(m => filterMoodIds.Contains(m.Id)))
                {
                    tempResult.Add(entry);
                }
            }
            result = tempResult;
        }

        // Apply tag filters
        if (filterTagIds.Count > 0)
        {
            var tempResult = new List<JournalEntry>();
            foreach (var entry in result)
            {
                var tags = entryTags.GetValueOrDefault(entry.Id, new List<Tag>());
                if (tags.Any(t => filterTagIds.Contains(t.Id)))
                {
                    tempResult.Add(entry);
                }
            }
            result = tempResult;
        }

        filteredEntries = result.OrderByDescending(e => e.CreatedAt).ToList();
    }

    private async Task ClearAllFilters()
    {
        filterStartDate = null;
        filterEndDate = null;
        filterMoodIds.Clear();
        filterTagIds.Clear();
        searchQuery = string.Empty;
        await ApplyFilters();
    }

    // Calendar navigation methods
    private void PreviousMonth()
    {
        currentCalendarDate = currentCalendarDate.AddMonths(-1);
    }

    private void NextMonth()
    {
        currentCalendarDate = currentCalendarDate.AddMonths(1);
    }

    private List<DateTime?> GetCalendarDays()
    {
        var days = new List<DateTime?>();
        var firstDayOfMonth = new DateTime(currentCalendarDate.Year, currentCalendarDate.Month, 1);
        var lastDayOfMonth = firstDayOfMonth.AddMonths(1).AddDays(-1);

        // Add empty days for the start of the week
        var startDayOfWeek = (int)firstDayOfMonth.DayOfWeek;
        for (int i = 0; i < startDayOfWeek; i++)
        {
            days.Add(null);
        }

        // Add all days of the month
        for (int day = 1; day <= lastDayOfMonth.Day; day++)
        {
            days.Add(new DateTime(currentCalendarDate.Year, currentCalendarDate.Month, day));
        }

        return days;
    }

    private string GetDayClass(DateTime? day)
    {
        if (!day.HasValue) return "";

        var classes = new List<string>();

        if (entryDates.Contains(day.Value.Date))
            classes.Add("has-entry");

        if (day.Value.Date == DateTime.Today)
            classes.Add("today");

        if (filterStartDate.HasValue && day.Value.Date == filterStartDate.Value.Date)
            classes.Add("selected");

        if (filterEndDate.HasValue && day.Value.Date == filterEndDate.Value.Date)
            classes.Add("selected");

        return string.Join(" ", classes);
    }

    private async Task SelectCalendarDate(DateTime? day)
    {
        if (!day.HasValue) return;

        // Toggle date selection for filtering
        if (filterStartDate.HasValue && filterEndDate.HasValue)
        {
            // Reset if both are set
            filterStartDate = day.Value;
            filterEndDate = null;
        }
        else if (filterStartDate.HasValue && !filterEndDate.HasValue)
        {
            if (day.Value < filterStartDate.Value)
            {
                filterEndDate = filterStartDate;
                filterStartDate = day.Value;
            }
            else
            {
                filterEndDate = day.Value;
            }
        }
        else
        {
            filterStartDate = day.Value;
        }
    }

    // Load entry for editing
    private async Task EditEntry(JournalEntry entry)
    {
        editingEntry = entry;
        entryTitle = entry.Title;
        entryContent = entry.Content;
        validationMessage = string.Empty;

        await JS.InvokeVoidAsync("quillEditor.setHtml", entry.Content);

        // Load tags
        var tags = await Database.GetTagsForEntryAsync(entry.Id);
        selectedTagIds = tags.Select(t => t.Id).ToList();

        // Get the actual primary mood from database
        var moodLinks = await Database.GetMoodLinksForEntryAsync(entry.Id);
        var primaryLink = moodLinks.FirstOrDefault(ml => ml.IsPrimary);

        selectedPrimaryMoodId = primaryLink?.MoodId ?? 0;
        selectedSecondaryMoodIds = moodLinks
            .Where(ml => !ml.IsPrimary)
            .Select(ml => ml.MoodId)
            .ToList();
    }

    // Handles both create and update
    private async Task SaveTodayEntry()
    {
        entryContent = await JS.InvokeAsync<string>("quillEditor.getHtml");

        // Validation
        validationMessage = string.Empty;

        if (string.IsNullOrWhiteSpace(entryTitle))
        {
            validationMessage = "Please enter a title for your journal entry.";
            return;
        }

        if (string.IsNullOrWhiteSpace(entryContent))
        {
            validationMessage = "Please write some content for your journal entry.";
            return;
        }

        if (selectedPrimaryMoodId == 0)
        {
            validationMessage = "Please select a primary mood for your entry.";
            return;
        }

        if (editingEntry != null)
        {
            // UPDATE existing entry
            editingEntry.Title = entryTitle;
            editingEntry.Content = entryContent;
            editingEntry.UpdatedAt = DateTime.Now;

            await Database.UpdateEntryAsync(editingEntry);

            // Update tags and moods
            await Database.SaveEntryTagsAsync(editingEntry.Id, selectedTagIds);
            await Database.SaveEntryMoodsAsync(
                editingEntry.Id,
                selectedPrimaryMoodId,
                selectedSecondaryMoodIds
            );
        }
        else
        {
            // CREATE new entry
            var today = DateTime.Today;

            await Database.SaveEntryAsync(new JournalEntry
            {
                Title = entryTitle,
                Content = entryContent,
                EntryDate = today
            });

            var savedEntry = await Database.GetEntryByDateAsync(today);

            if (savedEntry != null)
            {
                await Database.SaveEntryTagsAsync(savedEntry.Id, selectedTagIds);
                await Database.SaveEntryMoodsAsync(
                    savedEntry.Id,
                    selectedPrimaryMoodId,
                    selectedSecondaryMoodIds
                );
            }
        }

        // Clear form
        ClearForm();
        await LoadEntries();
        await ApplyFilters();
    }

    // Clear form helper
    private void ClearForm()
    {
        editingEntry = null;
        entryTitle = string.Empty;
        entryContent = string.Empty;
        selectedPrimaryMoodId = 0;
        selectedSecondaryMoodIds.Clear();
        selectedTagIds.Clear();
        validationMessage = string.Empty;
    }

    private void ToggleSecondaryMood(int moodId, bool isChecked)
    {
        if (isChecked)
        {
            if (!selectedSecondaryMoodIds.Contains(moodId)
                && selectedSecondaryMoodIds.Count < 2)
            {
                selectedSecondaryMoodIds.Add(moodId);
            }
        }
        else
        {
            selectedSecondaryMoodIds.Remove(moodId);
        }
    }

    private void ToggleTag(int tagId, bool isChecked)
    {
        if (isChecked)
        {
            if (!selectedTagIds.Contains(tagId))
                selectedTagIds.Add(tagId);
        }
        else
        {
            selectedTagIds.Remove(tagId);
        }
    }

    private async Task DeleteEntry(JournalEntry entry)
    {
        // If we're editing this entry, clear the form
        if (editingEntry?.Id == entry.Id)
        {
            ClearForm();
        }

        await Database.DeleteEntryAsync(entry);
        await LoadEntries();
        await ApplyFilters();
    }

    private string GetMoodColorClass(string category)
    {
        return category.ToLower() switch
        {
            "positive" => "mood-positive",
            "neutral" => "mood-neutral",
            "negative" => "mood-negative",
            _ => ""
        };
    }

    private string GetCategoryIconClass(string category)
    {
        return category.ToLower() switch
        {
            "positive" => "bi bi-emoji-smile",
            "neutral" => "bi bi-emoji-neutral",
            "negative" => "bi bi-emoji-frown",
            _ => "bi bi-circle"
        };
    }
}